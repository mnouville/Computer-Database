<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    	 version="3.0">
	<display-name>Archetype Created Web Application</display-name>
	
	<servlet>
		<description>
		</description>
		<display-name>ComputerServlet</display-name>
		<servlet-name>ComputerServlet</servlet-name>
		<servlet-class>servlet.ComputerServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>AddComputerServlet</display-name>
		<servlet-name>AddComputerServlet</servlet-name>
		<servlet-class>servlet.AddComputerServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>EditComputerServlet</display-name>
		<servlet-name>EditComputerServlet</servlet-name>
		<servlet-class>servlet.EditComputerServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>DeleteComputerServlet</display-name>
		<servlet-name>DeleteComputerServlet</servlet-name>
		<servlet-class>servlet.DeleteComputerServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>SortServlet</display-name>
		<servlet-name>SortServlet</servlet-name>
		<servlet-class>servlet.SortServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>SortByName</display-name>
		<servlet-name>SortByName</servlet-name>
		<servlet-class>servlet.SortByName</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>SortByIntro</display-name>
		<servlet-name>SortByIntro</servlet-name>
		<servlet-class>servlet.SortByIntro</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>SortByDisc</display-name>
		<servlet-name>SortByDisc</servlet-name>
		<servlet-class>servlet.SortByDisc</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>SortByCompanyName</display-name>
		<servlet-name>SortByCompanyName</servlet-name>
		<servlet-class>servlet.SortByCompanyName</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ComputerServlet</servlet-name>
		<url-pattern>/ComputerServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddComputerServlet</servlet-name>
		<url-pattern>/AddComputerServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditComputerServlet</servlet-name>
		<url-pattern>/EditComputerServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteComputerServlet</servlet-name>
		<url-pattern>/DeleteComputerServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SortServlet</servlet-name>
		<url-pattern>/SortServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SortByName</servlet-name>
		<url-pattern>/SortByName</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SortByIntro</servlet-name>
		<url-pattern>/SortByIntro</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SortByDisc</servlet-name>
		<url-pattern>/SortByDisc</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SortByCompanyName</servlet-name>
		<url-pattern>/SortByCompanyName</url-pattern>
	</servlet-mapping>


	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>springconfig.SpringConfig</param-value>
	</context-param>

	<context-param>
		<param-name>contextClass</param-name>
		<param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
	</context-param>
	
	<context-param>  
	    <param-name>spring.profiles.active</param-name>  
	    <param-value>dev</param-value>  
	</context-param>  
	<context-param>  
	    <param-name>spring.profiles.default</param-name>  
	    <param-value>dev</param-value>  
	</context-param>
	<context-param>  
	    <param-name>spring.liveBeansView.mbeanDomain</param-name>  
	    <param-value>dev</param-value>  
	</context-param>  
	
	<error-page>
        <error-code>404</error-code>
        <location>/views/404.html</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/views/403.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/views/500.html</location>
    </error-page>
</web-app>
